<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.technzone.bai3.ui.auth.login.viewmodels.LoginViewModel" />

        <import type="com.technzone.bai3.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/layouts_margin_start"
                    android:layout_marginEnd="@dimen/layouts_margin_end"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvSkip"
                        style="@style/textview_normal_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/skip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />


                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvHeader"
                        style="@style/textview_normal_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/welcome_to_for9a"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_24ssp" />

                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvSubHeader"
                        style="@style/textview_normal_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/log_in_explore_all_the_genuine_products_and_get_deliver_to_your_doorstep"
                        android:textColor="@color/subtitle_color"
                        android:textSize="@dimen/_14ssp" />

                    <LinearLayout
                        android:id="@+id/linearMobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/Edittext_height"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/shape_edittext"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp">

                        <com.technzone.bai3.ui.base.views.AppTextView
                            android:id="@+id/tvCountryCode"
                            style="@style/textview_normal_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/Edittext_height"
                            android:layout_gravity="center"
                            android:background="?selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:drawableEnd="@drawable/ic_dropdown_arrow"
                            android:drawablePadding="@dimen/_7sdp"
                            android:focusable="true"
                            android:gravity="center"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@{viewModel.selectedCountryCode.toString()}"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_13ssp"
                            tools:text="+962" />

                        <View
                            android:id="@+id/dividerMobileNumber"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/divider_gray" />

                        <com.technzone.bai3.ui.base.views.AppEditText
                            android:id="@+id/edPhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center|start"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@={viewModel.phoneNumberWithoutCountryCode}" />

                    </LinearLayout>

                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvPhoneError"
                        style="@style/textview_normal_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_error_input"
                        android:drawablePadding="@dimen/_3sdp"
                        android:textColor="@color/input_error_color"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        tools:text="Your phone number is incorrect." />

                    <com.technzone.bai3.ui.base.views.AppTextInputLayout
                        android:id="@+id/tfPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/Edittext_height"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/password"
                        app:passwordToggleEnabled="true">

                        <com.technzone.bai3.ui.base.views.AppTextInputEditText
                            android:id="@+id/edPassword"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/Edittext_height"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:text="@={viewModel.passwordMutableLiveData}" />

                    </com.technzone.bai3.ui.base.views.AppTextInputLayout>

                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvPasswordError"
                        style="@style/textview_normal_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_error_input"
                        android:drawablePadding="@dimen/_3sdp"
                        android:textColor="@color/input_error_color"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        tools:text="Your phone number is incorrect." />

                    <com.technzone.bai3.ui.base.views.AppTextView
                        android:id="@+id/tvForgetPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/forget_password_"
                        style="@style/textview_normal_regular"
                        android:textColor="@color/subtitle_color"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:text="@string/login"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/linear_SignInOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/divider_gray" />

                        <com.technzone.bai3.ui.base.views.AppTextView
                            style="@style/textview_normal_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="@string/or"
                            android:textColor="@color/subtitle_color"
                            android:textSize="@dimen/_12ssp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/divider_gray" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGoogle"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:backgroundTint="@color/google_color"
                        android:text="@string/continue_with_google"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12ssp"
                        app:cornerRadius="@dimen/_4sdp"
                        app:icon="@drawable/ic_google"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_17sdp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApple"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:backgroundTint="@color/apple_color"
                        android:text="@string/continue_with_apple"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:cornerRadius="@dimen/_5sdp"
                        app:icon="@drawable/ic_apple"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_17sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <com.technzone.bai3.ui.base.views.AppTextView
                            style="@style/textview_normal_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/dont_have_an_account"
                            android:textColor="@color/subtitle_color"
                            android:textSize="@dimen/_12ssp" />

                        <com.technzone.bai3.ui.base.views.AppTextView
                            android:id="@+id/tvSignUp"
                            style="@style/textview_normal_semibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="@string/register"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</layout>